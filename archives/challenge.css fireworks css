/* Animation for Card */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translate(
      -50%,
      calc(-50% + 50px)
    ); /* Start slightly below the center */
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%); /* End centered */
  }
}

/* Fireworks container */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 9999;
  overflow: hidden;
}

/* Keyframes for the curved rise */
@keyframes rise {
  0% {
    transform: translateX(var(--startX)) translateY(0);
    opacity: 1;
  }
  100% {
    transform: translateX(calc(var(--startX) + var(--controlX2)))
      translateY(var(--finalHeight));
    opacity: 1;
  }
}

/* Keyframes for the explosion */
@keyframes explode {
  0% {
    transform: translate(0, 0) scale(0.5);
    opacity: 1;
  }
  100% {
    transform: translate(var(--particleX), var(--particleY)) scale(1.5);
    opacity: 0;
  }
}

/* Firework rising dot */
.firework {
  position: absolute;
  bottom: 0; /* Start at the bottom of the screen */
  left: 50%; /* Center horizontally by default */
  transform: translateX(var(--startX));
  width: 0.25vmin; /* Adjusted for larger fireworks */
  height: 0.25vmin; /* Adjusted for larger fireworks */
  background-color: black;
  border-radius: 50%;
  animation: rise 2s cubic-bezier(0.25, 0.8, 0.5, 1) forwards;
  z-index: 2;
}

/* Firework particles */
.particle {
  position: absolute;
  top: 0;
  left: 0;
  width: 0.5vw; /* Adjusted to make the particles larger */
  height: 0.5vw; /* Adjusted to make the particles larger */
  border-radius: 50%;
  transform: translate(-50%, -50%);
  background-color: var(--particleColor);
  animation: explode 1.5s ease-out forwards;
  z-index: 1;
}

@media (max-width: 480px) {
  .firework {
    width: 0.5vmin; /* Even larger dot for mobile */
    height: 0.5vmin;
  }

  .particle {
    width: 2vw; /* Larger particles for mobile */
    height: 2vw;
  }
}

.incorrect-answer {
  animation: shake 0.5s ease;
}

/* Animation for incorrect answer */
@keyframes shake {
  0% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-10px);
  }
  50% {
    transform: translateX(10px);
  }
  75% {
    transform: translateX(-10px);
  }
  100% {
    transform: translateX(0);
  }
}

